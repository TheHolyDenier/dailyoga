---
import TheTitle from "../components/TheTitle.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
const websiteName = "dailyoga";
const composedTitle = title ? `${title} | ${websiteName}` : websiteName;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{composedTitle}</title>
    <script src="https://unpkg.com/htmx.org@1.9.10"></script>
  </head>
  <body>
    <TheTitle />
    <slot />
  </body>
</html>
<style is:global lang="scss">
  @use "../../public/styles/fonts" as *;

  :root {
    --primary: #ef8354;
    --secondary: #4f5d75;
    --white: #ffffff;
    --black: #2d3142;
  }
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
    @include font;
  }

  html {
    max-width: 100vw;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--white);
  }
</style>
